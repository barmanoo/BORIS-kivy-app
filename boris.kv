#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


BorisRoot:

<BorisRoot>:
    StartPageForm

<StartPageForm>:
    orientation: "vertical"
    Image:
        source: "logo_boris_500px.png"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Load project"
            size_hint_x: 0.4
            on_press: root.show_SelectProjectForm()
        Button:
            text: "View observation"
            size_hint_x: 0.4
            on_press: root.show_SelectObservationForm()
        Button:
            text: "Exit"
            size_hint_x: 0.2
            on_press: root.exit()

<SelectObservationForm>
    orientation: "vertical"
    FileChooserListView:
        id: observationfilechooser
        path: "."
        filters: ["*.boris_observation.tsv"]
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "View events"
            size_hint_x: 0.8
            on_press: root.view_events( observationfilechooser.selection)

<ViewObservationForm>
    orientation: "vertical"
    viewobs2_list: viewobs_list
    Label:
        height: "40dp"
        size_hint_y: None
        text: "View observation events"
    ListView:
        id: viewobs_list
        #item_strings: []
        item_strings: [str(index) for index in range(100)]


<SelectProjectForm>
    orientation: "vertical"
    Label:
        height: "40dp"
        size_hint_y: None
        text: "Select a BORIS project file and then press \"Load project\" button"
    FileChooserListView:
        id: projectfilechooser
        path: "."
        filters: ["*.boris"]
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "Load project"
            size_hint_x: 0.8
            on_press: root.load_project(projectfilechooser.path, projectfilechooser.selection)

<StartObservationForm>
    orientation: "vertical"
    obsid_input: obsid
    obsdate_input: obsdate
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Label:
            text: "Observation id"
        TextInput:
            id: obsid
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Label:
            text: "Observation date"
        TextInput:
            id: obsdate
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "Start observation"
            size_hint_x: 0.8
            on_press: root.start()

<ConfirmStopPopup>
    title: "Are you sure you want to stop the current observation?"
    title_size: "20sp"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Yes"
            size_hint_x: 0.5
            on_press: root.yes()
        Button:
            text: "No"
            size_hint_x: 0.5
            on_press: root.no()

