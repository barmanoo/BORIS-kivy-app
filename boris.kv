#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


BorisRoot:

<BorisRoot>:
    StartPageForm

<StartPageForm>:
    orientation: "vertical"
    Image:
        source: "logo_boris_500px.png"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "New observation"
            size_hint_x: 0.4
            on_press: root.show_SelectSubjectsForm()
        Button:
            text: "View observation"
            size_hint_x: 0.4
            on_press: root.show_SelectObservationForm()
        Button:
            text: "Exit"
            size_hint_x: 0.2
            on_press: root.exit()

<SelectObservationForm>
    orientation: "vertical"
    FileChooserListView:
        id: observationfilechooser
        path: "."
        filters: ["*.boris_observation.tsv"]
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "View events"
            size_hint_x: 0.8
            on_press: root.view_events( observationfilechooser.selection)

<ViewObservationForm>
    orientation: "vertical"
    viewobs2_list: viewobs_list
    Label:
        height: "40dp"
        size_hint_y: None
        text: "View observation events"
    ListView:
        id: viewobs_list
        #item_strings: []
        item_strings: [str(index) for index in range(100)]


<SelectSubjectsForm>
    orientation: "vertical"
    Label:
        height: "40dp"
        size_hint_y: None
        text: "Select a subjects file and then press \"Load subjects\" or \"Next\" button"
    FileChooserListView:
        id: subjectsfilechooser
        path: "."
        filters: ["*.boris_subjects"]
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "Load subjects"
            size_hint_x: 0.8
            on_press: root.load_subjects(subjectsfilechooser.path, subjectsfilechooser.selection)
        Button:
            text: "Next"
            size_hint_x: 0.8
            on_press: root.next()

<SelectEthogramForm>
    orientation: "vertical"
    Label:
        height: "40dp"
        size_hint_y: None
        text: "Select an ethogram file and then press \"Load ethogram\" button"
    FileChooserListView:
        id: ethogramfilechooser
        path: "."
        filters: ["*.boris_ethogram"]
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "Load ethogram"
            size_hint_x: 0.8
            on_press: root.load_ethogram(ethogramfilechooser.path, ethogramfilechooser.selection)

<StartObservationForm>
    orientation: "vertical"
    obsid_input: obsid
    obsdate_input: obsdate
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Label:
            text: "Observation id"
        TextInput:
            id: obsid
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Label:
            text: "Observation date"
        TextInput:
            id: obsdate
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Cancel"
            size_hint_x: 0.2
            on_press: root.cancel()
        Button:
            text: "Start observation"
            size_hint_x: 0.8
            on_press: root.start()

<ConfirmStopPopup>
    title: "Are you sure you want to stop the current observation?"
    title_size: "20sp"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Yes"
            size_hint_x: 0.5
            on_press: root.yes()
        Button:
            text: "No"
            size_hint_x: 0.5
            on_press: root.no()

